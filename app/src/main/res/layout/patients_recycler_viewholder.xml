<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/viewholder_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/patients_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient0"
            style="@style/AppTheme.Text.Title"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/generic_screen_horizontal_spacing">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/patients_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On it's way"
            style="@style/AppTheme.Text.Title"
            android:textColor="@color/darkGreen"
            android:layout_marginLeft="@dimen/generic_screen_horizontal_spacing">

        </androidx.appcompat.widget.AppCompatTextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>