<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/root_view"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/lifeline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lifeline"
        android:textSize="58sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/main_ll" />
    <TextView
        android:id="@+id/lifeline_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/helps_you_save_lives"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/lifeline_title" />
    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with_google"
            android:textSize="12sp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:backgroundTint="@color/rustyRed"
            android:gravity="center_horizontal" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>