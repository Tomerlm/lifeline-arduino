<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textViewStyle">@style/AppTheme.Text.Body</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.EditText.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/lightGrey</item>
    </style>

    <style name="AppTheme.Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="AppTheme.Text.Body.White" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Body.Black" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Body.Bigger" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontPath">fonts/GoogleSansRegular.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Title.Toolbar" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AppTheme.Text.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AppTheme.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/captionTextColor</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="strokeColor">#00000000</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.EditTextTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
    </style>

    <style name="AppTheme.Text.List" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Horizontal.Small">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#E7E7E7</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Divider.Horizontal.Small.NoMargin" parent="Divider.Horizontal.Small">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AppTheme.EditText.Register" parent="AppTheme.EditTextTheme">
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/lightGrey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LifeLineTextButtonTheme.Register" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="fontPath">fonts/MontserratRegular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16.6sp</item>
    </style>

    <style name="AppTheme.Button.Reel" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/lightGrey</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="DialogTheme" parent="AppTheme.Base">
        <item name="colorAccent">@color/white</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
